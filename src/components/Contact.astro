          title="Ubicación de MiSalon en Santa Cruz, Bolivia"
        ></iframe>
      </div>

    </div>

  </div>
</section>

<style>
  /* Contact Cards Grid */
  .contact-card {
    position: relative;
    padding: 2.5rem 2rem;
    border-radius: 8px;
    text-align: center;
    transition: all 0.3s ease;
    cursor: pointer;
    overflow: hidden;
  }

  .contact-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.15);
  }

  /* WhatsApp Card - Green accent */
  .contact-card-whatsapp {
    background: linear-gradient(135deg, #25D366 0%, #128C7E 100%);
  }

  /* Instagram Card - Pink gradient */
  .contact-card-instagram {
    background: linear-gradient(135deg, #E1306C 0%, #C13584 50%, #833AB4 100%);
  }

  /* Email Card - Gold from palette */
  .contact-card-email {
    background: linear-gradient(135deg, #D4AF37 0%, #B8941F 100%);
  }

  /* Card Content */
  .contact-card-content {
    position: relative;
    z-index: 2;
  }

  /* Card Icon */
  .contact-card-icon {
    display: flex;
    justify-content: center;
    margin-bottom: 1.5rem;
    color: white;
    opacity: 0.95;
  }

  .contact-card-icon svg {
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
  }

  /* Card Button */
  .contact-card-button {
    display: inline-block;
    padding: 0.75rem 2rem;
    background: rgba(255, 255, 255, 0.2);
    border: 2px solid white;
    border-radius: 4px;
    color: white;
    font-family: 'Montserrat', sans-serif;
    font-weight: 600;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .contact-card:hover .contact-card-button {
    background: white;
    color: #2C2C2C;
  }

  /* Location Map */
  .location-map {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .location-map iframe {
    display: block;
  }

  /* Mobile Optimizations */
  @media (max-width: 767px) {
    .contact-card {
      padding: 2rem 1.5rem;
    }

    .location-map iframe {
      height: 350px;
    }
  }
</style>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  // Set initial state for contact cards (FOUC prevention)
  gsap.set('.contact-card', {
    opacity: 0,
    y: 60,
  });

  gsap.set('.contact-info', {
    opacity: 0,
    y: 40,
  });

  gsap.set('.location-map', {
    opacity: 0,
    y: 60,
  });

  // Animate contact cards with stagger
  gsap.to('.contact-card', {
    scrollTrigger: {
      trigger: '#contact',
      start: 'top 75%',
      toggleActions: 'play none none none',
    },
    y: 0,
    opacity: 1,
    stagger: 0.15,
    duration: 0.8,
    ease: 'power2.out',
  });

  // Animate additional contact info
  gsap.to('.contact-info', {
    scrollTrigger: {
      trigger: '#contact',
      start: 'top 75%',
      toggleActions: 'play none none none',
    },
    y: 0,
    opacity: 1,
    duration: 0.8,
    delay: 0.5,
    ease: 'power2.out',
  });

  // Animate location map
  gsap.to('.location-map', {
    scrollTrigger: {
      trigger: '.location-map',
      start: 'top 85%',
      toggleActions: 'play none none none',
    },
    y: 0,
    opacity: 1,
    duration: 0.8,
    ease: 'power2.out',
  });
</script>
